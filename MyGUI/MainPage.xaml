<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyGUI.MainPage">

    <Grid RowDefinitions="Auto, Auto, Auto, *" ColumnDefinitions="*"
          Margin="10">
        
        <!-- Заголовок -->
        <Label Text="Бой против монстра"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="BlueViolet"
               FontAttributes="Bold"
               Margin="0,0,0,10"
               Grid.Row="0"/>
        
        <!-- Информация Игрок/Монстр -->
        <Grid ColumnDefinitions="*, *"
              RowDefinitions="Auto"
              ColumnSpacing="10"
              Grid.Row="1" >
            
            <Frame HasShadow="False"
                   BorderColor="BlueViolet"
                   CornerRadius="5"
                   Padding="10"
                   Grid.Column="0">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Игрок" FontSize="18" />
                    <Label Text="HP: 100/100" FontSize="14" />
                    <ProgressBar ProgressColor="BlueViolet"
                                 Progress="1"
                                 HeightRequest="5" />
                    <Label Text="Сила: 6-12" FontSize="12" />
                </VerticalStackLayout>
            </Frame>

            <Frame HasShadow="False"
                   BorderColor="BlueViolet"
                   CornerRadius="5"
                   Padding="10"
                   Grid.Column="1">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Монстр" FontSize="18" />
                    <Label Text="HP: 100/100" FontSize="14" />
                    <ProgressBar ProgressColor="BlueViolet"
                                 Progress="1"
                                 HeightRequest="5" />
                    <Label Text="Сила: 6-12" FontSize="12" />
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <!-- Кнопки -->
        <FlexLayout Direction="Row" Wrap="Wrap" Margin="0,10,0,10" JustifyContent="Center"
                    Grid.Row="2">
            <Button Text="Атаковать  " Margin="5" WidthRequest="130"/>
            <Button Text="Вылечиться " Margin="5" WidthRequest="130"/>
            <Button Text="Супер-атака" Margin="5" WidthRequest="130"/>
            <Button Text="Новая игра " Margin="5" WidthRequest="130" BackgroundColor="BlueViolet"/>
        </FlexLayout>

        <!-- Лог боя, занимает оставшееся пространство -->
        <Frame HasShadow="False"
                BorderColor="LightGray"
                CornerRadius="5"
                Grid.Row="3"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                Padding="10">
            <ScrollView>
                <Label VerticalOptions="FillAndExpand"
                       HorizontalOptions="FillAndExpand"
                       Text="Бой начат..."
                       LineBreakMode="WordWrap" />
            </ScrollView>
        </Frame>
    </Grid>

</ContentPage>
